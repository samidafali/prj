@model ProjetEpîcerie.Models.Login

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Connexion</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-image: url('../image/fond.jpg');
            background-size: cover;
            color: #000000; /* Noir */
        }

        .site-title {
            background: linear-gradient(to right, #fdfd96, #ffff00); /* Dégradé de jaune */
            text-align: center;
            padding: 20px 0;
        }

            .site-title h1 {
                font-family: 'Arial Black', sans-serif; /* Police attirante */
                margin-bottom: 0;
                color: #000000; /* Noir */
            }

        .form-container {
            background-color: #fdfd96; /* Jaune pâle */
            border-radius: 10px;
            box-shadow: 0px 0px 10px 0px rgba(0,0,0,0.1);
            padding: 30px;
            margin-top: 50px;
        }

            .form-container label {
                color: #000000; /* Noir */
                font-weight: bold; /* En gras */
            }

        .btn-connecter {
            background-color: #28a745; /* Bleu */
            border-color: #28a745; /* Bleu */
        }
    </style>
</head>
<body>
    <!-- Titre du site et logo -->
    <div class="site-title">
        <div class="container">
            <div class="row">
                <div class="col-2">
                    <img src="../image/logo3.jpg" alt="Logo" style="width: 100px; height: auto;">
                </div>
                <div class="col-8">
                    <h1>FARMERS MARKET</h1>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="form-container">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        if (ViewBag.Pageconnexion != null)
                        {
                            foreach (var infoPage in ViewBag.Pageconnexion)
                            {
                                <form>
                                    <h2 class="text-center mb-4">Connexion</h2>

                                    <!-- Nom d'utilisateur -->
                                    <div class="form-group">
                                        <label for="username">@infoPage.LableNom</label>
                                        @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "form-control", id = "username" } })
                                        @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
                                    </div>

                                    <!-- Mot de passe -->
                                    <div class="form-group">
                                        <label for="password">@infoPage.LabMotPasse</label>
                                        @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control", @Type = "password", id = "password" } })
                                        @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="form-group">
                                        <button type="submit" class="btn btn-primary btn-connecter">@infoPage.BtnConnecter</button>
                                    </div>
                                </form>
                            }
                        }
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
</body>
</html>
