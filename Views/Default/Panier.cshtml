@model IEnumerable<ProjetEpîcerie.Models.Panier>
<link href="~/Css/Acceuil.css" rel="stylesheet" />
<link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    if (ViewBag.PagePanier != null)
    {
        foreach (var infoPage in ViewBag.PagePanier)
        {

            <div class="form-horizontal">
                <header>
                    <nav class="navbar navbar-expand-sm bg-white navbar-dark">
                        <div class="container-fluid">
                            <a href="#" class="navbar-brand">
                                <img src="../image/logo3.jpg" alt="logo" style="width: 100px; height: auto;">
                                FARMERS MARKET
                            </a>
                            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
                                <span class="navbar-toggler-icon"></span>
                            </button>
                            <div class="collapse navbar-collapse" id="collapsibleNavbar">
                                <ul class="navbar-nav">
                                    @if (ViewBag.Categories != null)
                                    {
                                        foreach (var item in ViewBag.Categories)
                                        {
                                            <li class="nav-item">
                                                <a href="@Url.Action("AfficherProduits", "Default", new { id = item.IdCategorie, IdLangue = item.IdLangue })" class="btn btn-success"> @item.NameTraduction</a>
                                            </li>
                                        }
                                    }
                                    <li class="nav-item">
                                        <a href="@Url.Action("Deconnexion", "Default")" class="btn btn-success"> @infoPage.btnDeconncter</a>
                                    </li>
                                </ul>

                                <ul class="navbar-nav">
                                    <li>
                                        <a href="@Url.Action("Panier", "Default")" class="btn btn-info">
                                            <i class="bi bi-cart4"></i>
                                            <span>
                                                @if (ViewBag.nbPanier != null)
                                                {
                                                    @ViewBag.nbPanier
                                                }
                                            </span>
                                        </a>
                                    </li>
                                </ul>

                                <ul class="navbar-nav">
                                    @if (ViewBag.Langue != null)
                                    {
                                        foreach (var lang in ViewBag.Langue)
                                        {
                                            <li class="nav-item">
                                                <div class="boite3">
                                                    <a href="@Url.Action("Panier", "Default", new { IdLangue = lang.IdLangue })">@lang.Symbole</a>
                                                </div>
                                            </li>
                                        }
                                    }
                                </ul>
                            </div>
                        </div>
                    </nav>
                </header>

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div style="text-align: center;">
                    <h2>@infoPage.Totapayer</h2>
                    @if (ViewBag.prixTotal != null)
                    {
                        <h3>@ViewBag.prixTotal $CAD</h3>
                    }
                </div>

                <table class="table">
                    <thead>
                        <tr>
                            <th>@infoPage.NomProduit</th>
                            <th>@infoPage.Quantité</th>
                            <th>@infoPage.PrixUnitaire</th>
                            <th>@infoPage.Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Produits.Nom)</td>
                                <td>@Html.DisplayFor(modelItem => item.Quantité)</td>
                                <td>@Html.DisplayFor(modelItem => item.Produits.Prix)</td>
                                <td>
                                    <a href="@Url.Action("Edit", "Default", new { id = item.IdPanier })" class="btn btn-success">@infoPage.btnModifier</a>
                                    <a href="@Url.Action("Delete", "Default", new { id = item.IdPanier })" class="btn btn-success">@infoPage.btnSupprimer</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <div style="text-align: center;">
                    <div id="paypal-payment-button"></div>
                </div>
            </div>
        }
    }
}

<script src="https://www.paypal.com/sdk/js?client-id=Abb9jMAzLGmxPQO8JMLspihGWNbPvsHKb6VujqWxPCLOMVAUi7Z-nMPJXSks1eOALLKi3pcUcpfMsLG5&currency=CAD"></script>
<script>
    paypal.Buttons({
        style: {
            color: 'blue'
        },
        createOrder: function (data, actions) {
            return actions.order.create({
                purchase_units: [{
                    amount: {
                        value: '@ViewBag.prixTotal'
                    }
                }]
            });
        },
        onApprove: function (data, actions) {
            return actions.order.capture().then(function (details) {
                window.location.replace('@Url.Action("Success", "Default")');
            });
        }
    }).render('#paypal-payment-button');
</script>

<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
