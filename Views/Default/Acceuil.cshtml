@model IEnumerable<ProjetEpîcerie.Models.CategoriesTraductions>

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Accueil</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        body {
            background-color: beige;
            color: #000000;
        }

        .site-title {
            background: linear-gradient(to right, #fdfd96, #ffff00);
            text-align: center;
            padding: 20px 0;
            margin-bottom: 20px;
        }

            .site-title h1 {
                font-family: 'Arial Black', sans-serif;
                margin-bottom: 0;
                color: #000000;
            }

        .nav-link {
            color: #000000 !important;
        }

            .nav-link:hover {
                color: #000000 !important;
            }

        .navbar {
            background-color: #fdfd96;
            color: #000000;
        }

        .navbar-brand img {
            width: 100px;
            height: auto;
        }

        .navbar-brand {
            font-size: 1.5rem;
            font-weight: bold;
            color: #000000 !important;
        }

            .navbar-brand:hover {
                color: #000000 !important;
            }

        .navbar-nav .nav-item {
            margin-right: 10px;
        }

        .bi-cart4 {
            font-size: 1.5rem;
            vertical-align: middle;
        }

        .image1 {
            max-width: 100%; /* Ajustement de la largeur maximale de l'image */
            height: auto; /* Permet de conserver les proportions de l'image */
            display: block; /* Pour centrer l'image */
            margin: 0 auto; /* Pour centrer l'image */
        }

        .form-horizontal {
            margin-top: 50px;
        }

        .text-danger {
            color: #ff0000;
        }

        .container-encadre {
            border: 1px solid #ccc;
            border-radius: 5px;
            padding: 20px;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" href="#">
                <img src="../image/logo3.jpg" alt="Logo"> FARMERS MARKET
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    @foreach (var item in Model)
                    {
                        <li class="nav-item">
                            @Html.ActionLink(item.NameTraduction, "AfficherProduits", "Default", new { id = item.IdCategorie, IdLangue = item.IdLangue }, new { @class = "nav-link" })
                        </li>
                    }
                    <li class="nav-item">
                        <a href="@Url.Action("Deconnexion", "Default")" class="nav-link">Déconnexion</a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("Panier", "Default")" class="nav-link">
                            <i class="bi bi-cart4"></i>
                            <span>
                                @if (ViewBag.nbPanier != null)
                                {
                                    @ViewBag.nbPanier
                                }
                            </span>
                        </a>
                    </li>
                    @if (ViewBag.Langue != null)
                    {
                        foreach (var lang in ViewBag.Langue)
                        {
                            <li class="nav-item">
                                <a href="@Url.Action("Acceuil", "Default", new { IdLangue = lang.IdLangue })" class="nav-link">@lang.Symbole</a>
                            </li>
                        }
                    }
                </ul>
            </div>
        </div>
    </nav>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal container">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row">
                <div class="col-md-12 text-center">
                    @if (ViewBag.TraduitAcceuils != null)
                    {
                        foreach (var infoPage in ViewBag.TraduitAcceuils)
                        {
                            <h2 style="font-weight: bold;">@infoPage.txt1</h2>
                            <p style="text-align: center;">@infoPage.txt2</p>
                        }
                    }
                    <div class="text-center">
                        <img src="https://st2.depositphotos.com/1001069/12177/i/450/depositphotos_121776424-stock-photo-vegetables-fish-meat-and-ingredients.jpg" class="image1" alt="epicerie">
                    </div>
                </div>
            </div>
        </div>
    }

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
</body>
</html>
